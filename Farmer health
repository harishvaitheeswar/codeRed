        // Healthcare schemes data
        const healthcareSchemes = {
            pmjay: {
                title: 'Pradhan Mantri Jan Arogya Yojana (PM-JAY)',
                description: 'Free health insurance up to ‚Çπ5 lakh per family per year. Covers over 1,400 medical packages including hospitalization costs.',
